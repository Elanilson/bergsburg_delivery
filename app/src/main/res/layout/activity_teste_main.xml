<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activity.TesteMainActivity">

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:visibility="visible" />

    <Button
        android:id="@+id/buttonAutenticar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Autenticar" />

    <Button
        android:id="@+id/buttonBuscarEventos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buscar Evento" />

    <Button
        android:id="@+id/buttonLimparEvento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Limpar eventos" />

    <Button
        android:id="@+id/buttonCriarPedido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Criar Pedido" />

    <Button
        android:id="@+id/buttonVerificarFrete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verificar frete" />

    <Button
        android:id="@+id/buttonConfirmarPedido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirmar pedido" />

    <Button
        android:id="@+id/buttonCAncelarPedido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancelar Pedido" />

    <Button
        android:id="@+id/buttonAceitarSolicitacaoDeCancelamento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="aceita cancelamento" />

    <Button
        android:id="@+id/buttonNegarSolicitacaoCancelamento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="nega cancelamento" />

    <Button
        android:id="@+id/buttonBuscarDetalhesDoPedido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buscar detalhes do pedido" />

    <Button
        android:id="@+id/buttonHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Home" />
</LinearLayout>