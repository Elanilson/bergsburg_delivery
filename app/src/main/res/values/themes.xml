<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BergBurgDelivery" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/amarelo</item>
        <item name="colorSecondaryVariant">@color/amarelo</item>
        <item name="colorOnSecondary">@color/amarelo</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.BergBurgDelivery_NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/amarelo</item>
        <item name="colorSecondaryVariant">@color/amarelo</item>
        <item name="colorOnSecondary">@color/amarelo</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.BergBurgDelivery_custom_amarelo" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/amarelo</item>
        <item name="colorPrimaryVariant">@color/amarelo</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="alertDialogStyle">@style/Theme.BergBurgDelivery_NoActionBar</item>
        <item name="android:textColorPrimary">@color/grey11</item>
        <item name="android:textColorSecondary">@color/grey11</item>
        <item name="android:titleTextColor">@color/grey11</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/amarelo</item>
        <item name="colorSecondaryVariant">@color/amarelo</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="button_custom">
        <item name="colorPrimary">@color/amarelo</item>
        <item name="android:textColor">@color/grey11</item>
    </style>

    <style name="button_custom_black">
        <item name="colorPrimary">@color/grey11</item>
        <item name="android:textColor">@color/grey11</item>
    </style>



    <style name="Theme.BergBurgDelivery.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.BergBurgDelivery.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>